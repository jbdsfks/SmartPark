<%include head%>
    <script src="/controllers/highway-controller1.js"></script>
  <style>
    
    .th-info,td-info{
      text-align: center;
      width: 30%;
    }
  </style>
   </head>
   
<body>
<div class="container-fluid"  ng-controller="highwayController1">
   <div class="row-fluid">
    <div class="span12" style="color: white;background-color: black;">
      <h2 class="text-center">XXXXXXXXX</h2>
      <div class="navbar navbar-inverse">
        <div class="navbar-inner">
          <div class="container-fluid">
             <a data-target=".navbar-responsive-collapse" data-toggle="collapse" class="btn btn-navbar">
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span></a>
             <div class="nav-collapse collapse navbar-responsive-collapse">
                <ul class="nav">
                  <li class="active"><a ng-click="Hello()">你好，{{userid}}</a></li>
                  <li class="active"><a ng-click="Index()">主页</a></li>
                  <li class="active"><a ng-click="Setting()">设置</a></li>
                </ul>
                <ul class="nav pull-right">
                  <li><a ng-click="logout()">注销登录</a></li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid" ng-show="inout">
    <h2>今日出入记录</h2>
      <div class="span3" style="width: 18%;">
            <div class="list-group" >
                &nbsp;&nbsp;&nbsp;<h3>车流量：{{flow}}</h3>
                &nbsp;&nbsp;&nbsp;<h3>收入：{{income}}</h3>
            </div>
          </div>
      <div class="span9"  style="width: 70%;position: relative;margin-top: -80px;" >
          <center><div class="page-header" style="font-size: 20px;" >{{stationname}}车辆出入情况[{{time}}]</div></center>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Username</th>
                  <th>Carid</th>
                  <th>Intime</th>
                  <th>Outtime</th>
                  <th>Duration</th>
                  <th>Pay</th>
                </tr>
             </thead>
              <tbody>
                <tr ng-repeat="obj in list">
                  <td>{{obj.id}}</td>
                  <td>{{obj.username}}</td>
                  <td>{{obj.carid}}</td>
                  <td>{{obj.intime}}</td>
                  <td>{{obj.outtime}}</td>
                  <td>{{obj.duration}}</td>
                  <td>{{obj.pay}}</td>
                </tr>
              </tbody>
            </table>
            <center><div class="page" style="color: blue;">共<span ng-bind="data.length"></span>条记录
              <span ng-click="divList(0)" class="link">首页</span>
              <span ng-click="divList(-1)" ng-show="currentPage > 0" class="link">上一页</span>
              <span ng-click="divList(1)" ng-show="currentPage!=totalPage" class="link">下一页</span>
            </div></center>
          </div>
  </div>

  <div class="row-fluid" ng-show="setting">
    <br><br>
    <div style="width: 200px; position: relative;left: 20px;text-align: center;" >
        <a href="#" class="list-group-item" style="background-color: black;color: white;">设置</a>
        <a ng-click="Info()" class="list-group-item" >基本信息</a>
        <a ng-click="AlterInfo()" class="list-group-item">更改信息</a>
    </div>
    <div style="width:80%;position:relative;left: 250px;top: -150px;">
      <center><h3>基本信息</h3>
         <table class="table" style="text-align: center;">
                <tr>
                  <th class="th-info">用户ID</th>
                  <th class="th-info">{{userid}}</th>
                </tr>
                <tr>
                  <th class="th-info">用户名</th>
                  <th class="th-info">{{username}}</th>
                </tr>
                <tr>
                  <th class="th-info">密码</th>
                  <th class="th-info">{{password}}</th>
                </tr>
                <tr>
                  <th class="th-info">收费站名称</th>
                  <th class="th-info">{{stationname}}</th>
                </tr>
          </table>
      </center>
    </div>
  </div>


  <div class="row-fluid" ng-show="alterinfo">
    <br><br>
    <div style="width: 200px; position: relative;left: 20px;text-align: center;">
        <a href="#" class="list-group-item" style="background-color: black;color: white;">设置</a>
        <a ng-click="Info()" class="list-group-item" >基本信息</a>
        <a ng-click="AlterInfo()" class="list-group-item">更改信息</a>
    </div>

    <div style="width: 80%;position:relative;left: 250px;top: -150px;">
        <center><h3>更改信息</h3>
          <table class="table" style="text-align: center;">
              <tr>
                <th class="th-info">用户ID</th>
                <th class="th-info">{{userid}}</th>
              </tr>
              <tr>
                <th class="th-info">用户名</th>
                <th class="th-info"><input id="username" type="text" autocomplete="off"  value="XXXXX" ng-model="username" ng-click="clearErrorInfo()"/></th>
              </tr>
              <tr>
                <th class="th-info">密码</th>
                <th class="th-info"><input id="password" type="password" autocomplete="off" value="123456" ng-model="password" ng-click="clearErrorInfo()"/></th>
              </tr>
              <tr>
                <th class="th-info">收费站名称</th>
                <th class="th-info"><select ng-model="stationname">
                                      <option value="沪宁高速南京收费站">沪宁高速南京收费站
                                      <option value="沪宁高速苏州新区收费站">沪宁高速苏州新区收费站
                                      <option value="沪宁高速花桥收费站">沪宁高速花桥收费站
                                    </select></th>
              </tr>
          </table>
          <button id="btnSub" type="submit" class="btn btn-success btn-lg" ng-click="save()">保存</button>
          <p class="text-danger" style="color:red;" ng-bind="errorInfo"></p>
        </center>
    </div>
  </div>

</div>
</body>
</html>
